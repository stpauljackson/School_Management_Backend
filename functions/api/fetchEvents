const functions = require('firebase-admin');

exports.getEvents = async (req, res) => {
    try {
        const { school } = req.body;
        if (!school) {
            return res.status(400).send('Bad Request: teacherId and classId are required.');
        }

        const eventsRef = admin.firestore().collection('events'); // Assuming 'admin' is already initialized in your index.js
        const querySnapshot = await eventsRef.get();

        const events = [];
        querySnapshot.forEach(doc => {
            events.push(doc.data());
        });

        return res.status(200).json(events);
    } catch (error) {
        console.error('Error fetching events:', error);
        return res.status(500).send('Internal server error.');
    }
};
